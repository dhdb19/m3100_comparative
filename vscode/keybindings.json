// Place your key bindings in this file to override the defaults
[
    {
        "key": "ctrl+B",
        "command": "editor.action.insertSnippet",
        "when": "editorTextFocus && editorLangId == 'rsweave' || editorLangId == 'latex' ",  
        "args": {
            "snippet": "\\textbf{${TM_SELECTED_TEXT}$0}"
        },
        
    },


    {
        "key": "ctrl+shift+B",
        "command": "editor.action.insertSnippet",
        "when": "editorTextFocus && editorLangId == 'rsweave' || editorLangId == 'latex' ",  
        "args": {
            "snippet": "BVerfG"
        },
        
    },


    {
        "key": "ctrl+I",
        "command": "editor.action.insertSnippet",
        "when": "editorTextFocus && editorLangId == 'rsweave' || editorLangId == 'latex' ",  
        "args": {
            "snippet": "\\textit{${TM_SELECTED_TEXT}$0}"
        },
    },


    {
        "key": "ctrl+shift+I",
        "command": "editor.action.insertSnippet",
        "when": "editorTextFocus && editorLangId == 'rsweave' || editorLangId == 'latex' ",  
        "args": {
            "snippet": "\\item "
        },
    },


    {
        "key": "ctrl+shift+U",
        "command": "editor.action.insertSnippet",
        "when": "editorTextFocus && editorLangId == 'rsweave' || editorLangId == 'latex' ",  
        "args": {
            "snippet": "^{${TM_SELECTED_TEXT}$0}"
        },
    },


    {
        "key": "ctrl+u",
        "command": "editor.action.insertSnippet",
        "when": "editorTextFocus && editorLangId == 'rsweave' || editorLangId == 'latex' ",  
        "args": {
            "snippet": "\\underline{${TM_SELECTED_TEXT}$0}"
        },
    },


    {
        "key": "ctrl+shift+4",
        "command": "editor.action.insertSnippet",
        "when": "editorTextFocus && editorLangId == 'rsweave' || editorLangId == 'latex' ",  
        "args": {
            "snippet": "$${TM_SELECTED_TEXT}$0$"
        },
    },

    {
        "key": "ctrl+shift+5",
        "command": "editor.action.insertSnippet",
        "when": "editorTextFocus && editorLangId == 'rsweave' || editorLangId == 'latex' ",  
        "args": {
            "snippet": "%------------------------------------------------------"
        },
    },

    {
        "key": "ctrl+shift+m",
        "command": "editor.action.insertSnippet",
        "when": "editorTextFocus && editorLangId == 'rsweave' || editorLangId == 'latex' ",  
        "args": {
            "snippet": "\\[ ${TM_SELECTED_TEXT}$0 \\]"
        },
    },

    {
        "key": "ctrl+shift+alt+u",
        "command": "editor.action.insertSnippet",
        "when": "editorTextFocus && editorLangId == 'rsweave' || editorLangId == 'latex' ",  
        "args": {
            "snippet": "\\underbrace{${TM_SELECTED_TEXT}}_{$0}"
        },
    },


    {
        "key": "ctrl+shift+alt+o",
        "command": "editor.action.insertSnippet",
        "when": "editorTextFocus && editorLangId == 'rsweave' || editorLangId == 'latex' ",  
        "args": {
            "snippet": "\\overbrace{${TM_SELECTED_TEXT}}^{$0}"
        },
    },


    {
        "key": "ctrl+e",
        "command": "editor.action.insertSnippet",
        "when": "editorTextFocus && editorLangId == 'rsweave' || editorLangId == 'latex' ",  
        "args": {
            "snippet": "\\enquote{${TM_SELECTED_TEXT}$0}"
        },
    },


    {
        "key": "ctrl+shift+6",
        "command": "editor.action.insertSnippet",
        "when": "editorTextFocus && editorLangId == 'rsweave' || editorLangId == 'latex' ",  
        "args": {
            "snippet": "\\&"
        },
    },

    {
        "key": "ctrl+t",
        "command": "editor.action.insertSnippet",
        "when": "editorTextFocus && editorLangId == 'rsweave' || editorLangId == 'latex' ",  
        "args": {
            "snippet": "$\\to$$0"
        },
    },


    {
        "key": "ctrl+shift+f",
        "command": "editor.action.insertSnippet",
        "when": "editorTextFocus && editorLangId == 'rsweave' || editorLangId == 'latex' ",  
        "args": {
            "snippet": "\\begin{figure}[H]\n\t \\center \n\t \\includegraphics[]{$0}\n\\end{figure}"
        },
    },

    {
        "key": "ctrl+shift+t",
        "command": "editor.action.insertSnippet",
        "when": "editorTextFocus && editorLangId == 'rsweave' || editorLangId == 'latex' ",  
        "args": {
            "snippet": "\\begin{table}[H]\n\t \\center\n\t \\ttfamily \n\t\t \\begin{tabular}{$0}\n\t\t\n\t\\end{tabular}\n\\end{table}"
        },
    },


    {
        "key": "ctrl+m",
        "command": "editor.action.insertSnippet",
        "when": "editorTextFocus && editorLangId == 'rsweave' || editorLangId == 'latex' ",  
        "args": {
            "snippet": "\\begin{mec1}{$0}\n\t ${TM_SELECTED_TEXT}\n\\end{mec1}\n"
        },
    },

    {
        "key": "ctrl+shift+q",
        "command": "editor.action.insertSnippet",
        "when": "editorTextFocus && editorLangId == 'rsweave' || editorLangId == 'latex' ",  
        "args": {
            "snippet": "\\parencite[][$0]{}"
        },
    },

    {
        "key": "shift+alt+q",
        "command": "editor.action.insertSnippet",
        "when": "editorTextFocus && editorLangId == 'rsweave' || editorLangId == 'latex' ",  
        "args": {
            "snippet": "\\textcite[][]{$0}"
        },
    },

    {
        "key": "ctrl+shift+v",
        "command": "editor.action.insertSnippet",
        "when": "editorTextFocus && editorLangId == 'rsweave' || editorLangId == 'latex' ",  
        "args": {
            "snippet": "\\vspace*{0.25cm}"
        },
    },
    {
        "key": "shift+alt+v",
        "command": "editor.action.insertSnippet",
        "when": "editorTextFocus && editorLangId == 'rsweave' || editorLangId == 'latex' ",  
        "args": {
            "snippet": "\\vspace*{0.$0cm}"
        },
    },

    {
        "key": "ctrl+shift+r",
        "command": "editor.action.insertSnippet",
        "when": "editorTextFocus && editorLangId == 'rsweave' || editorLangId == 'latex' ",  
        "args": {
            "snippet": "<<>>=\n\n$0\n\n@"
        },
    },

    {
        "key": "ctrl+shift+8",
        "command": "editor.action.insertSnippet",
        "when": "editorTextFocus && editorLangId == 'rsweave' || editorLangId == 'latex' ",  
        "args": {
            "snippet": "\\left($0\\right)@"
        },
    },

    {
        "key": "ctrl+alt+t",
        "command": "editor.action.insertSnippet",
        "when": "editorTextFocus && editorLangId == 'rsweave' || editorLangId == 'latex' ",  
        "args": {
            "snippet": "\\texttt{${TM_SELECTED_TEXT}$0}"
        },
    },

    {
        "key": "ctrl+shift+l",
        "command": "editor.action.insertSnippet",
        "when": "editorTextFocus && editorLangId == 'rsweave' || editorLangId == 'latex' ",  
        "args": {
            "snippet": "{\\internallinenumbers\n${TM_SELECTED_TEXT}$0\n}"
        },
    },

    {
        "key": "ctrl+g",
        "command": "editor.action.insertSnippet",
        "when": "editorTextFocus && editorLangId == 'python' ",  
        "args": {
            "snippet": "\"$0\":\"\","
        },
    },

    {
        "key": "ctrl+shift+g",
        "command": "editor.action.insertSnippet",
        "when": "editorTextFocus && editorLangId == 'python' ",  
        "args": {
            "snippet": "{\n\t\"$0\":\"\",\n}"
        },
    },
    {
        "key": "shift+space",
        "command": "cursorLineEnd"
    },

    {
        "key": "ctrl+alt+u",
        "command": "editor.action.transformToUppercase",
        "when": "editorTextFocus && editorLangId == 'rsweave' || editorLangId == 'latex' ",
    },

    {
        "key": "ctrl+alt+l",
        "command": "editor.action.transformTo",
        "when": "editorTextFocus && editorLangId == 'rsweave' || editorLangId == 'latex' ",
    },
]